<Window x:Class="Practica.SighIn"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Practica"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="SighIn" Height="200" Width="400">
    <Grid>
        <Label Content="Логин:" HorizontalAlignment="Center" Margin="0,10,155,0" VerticalAlignment="Top" FontSize="20"/>
        <TextBox x:Name="Login" HorizontalAlignment="Center" Margin="30,15,0,0" Text="" TextWrapping="NoWrap" MaxLength="32" VerticalAlignment="Top" Width="120" FontSize="20"/>
        <Label Content="Пароль:" HorizontalAlignment="Center" Margin="0,50,170,0" VerticalAlignment="Top" FontSize="20"/>
        <PasswordBox x:Name="Password" HorizontalAlignment="Center" Margin="30,55,0,0" VerticalAlignment="Top" Width="120" FontSize="20"/>
        <Button Content="Войти" Width="300" HorizontalAlignment="Center" Margin="0,80,0,0" VerticalAlignment="Center" FontSize="20" Click="Auth"/>
    </Grid>
</Window>
